<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/card_view_layout_margin"
    app:cardCornerRadius="@dimen/card_view_corner_radius"
    >

  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      >

    <TextView
        android:id="@+id/card_view_song_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/card_view_title_height"
        android:background="@color/colorAccent"
        android:gravity="center"
        android:padding="4dp"
        android:textColor="@android:color/white"
        android:textSize="@dimen/card_view_title_size"
        />

    <ImageView
        android:id="@+id/card_view_img"
        android:layout_width="match_parent"
        android:layout_height="@dimen/card_view_img_height"
        android:layout_below="@+id/card_view_song_title"
        android:scaleType="fitXY"
        />

  </RelativeLayout>

</android.support.v7.widget.CardView>