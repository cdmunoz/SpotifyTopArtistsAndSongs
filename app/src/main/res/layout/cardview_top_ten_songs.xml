<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/card_view_layout_margin"
    app:cardCornerRadius="@dimen/card_view_corner_radius"
    >

  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      >

    <ImageView
        android:id="@+id/card_view_song_image"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_margin="10dp"
        />

    <TextView
        android:id="@+id/card_view_song_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/card_view_song_image"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@+id/card_view_song_image"
        android:gravity="start"
        android:padding="4dp"
        android:textColor="@android:color/darker_gray"
        android:textSize="@dimen/card_view_title_size"
        />

    <TextView
        android:id="@+id/card_view_song_album"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/card_view_song_title"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/card_view_song_image"
        android:gravity="start"
        android:padding="4dp"
        android:textColor="@android:color/darker_gray"
        android:textSize="@dimen/card_view_title_size"
        />

    <!--<ImageView android:id="@+id/card_view_img"
        android:layout_width="match_parent"
        android:layout_height="@dimen/card_view_img_height"
        android:scaleType="fitXY"
        android:layout_below="@+id/card_view_title"
        />-->

  </RelativeLayout>

</android.support.v7.widget.CardView>